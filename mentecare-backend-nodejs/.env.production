# Configurações de Produção - MenteCare Backend Node.js
NODE_ENV=production
PORT=3000

# Banco de Dados
# Para produção, recomenda-se usar PostgreSQL ou MySQL
# DATABASE_URL=postgresql://username:password@localhost:5432/mentecare_prod
# Para SQLite (desenvolvimento/teste):
DATABASE_PATH=./database/mentecare_production.db

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here_change_in_production
JWT_EXPIRES_IN=24h

# CORS Configuration
CORS_ORIGIN=https://your-frontend-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Security
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your_session_secret_here

# Email Configuration (para futuras funcionalidades)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Health Check
HEALTH_CHECK_ENABLED=true

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

